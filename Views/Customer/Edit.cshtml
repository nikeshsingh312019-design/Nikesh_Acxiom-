@model Sunny_Acxiom.Models.Customer

<h2 class="text-warning mb-4">Edit Customer</h2>

<div class="card shadow p-4">
    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="Customer_Id" />

        <div class="mb-3">
            <label>Name</label>
            <input asp-for="C_Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label>City</label>
            <input asp-for="City" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Phone Number</label>
            <input asp-for="Phone_Number" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Email</label>
            <input asp-for="C_Email" class="form-control" />
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a href="/Customer" class="btn btn-secondary">Back</a>

    </form>
</div>
