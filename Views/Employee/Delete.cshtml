@model Sunny_Acxiom.Models.Employee

<h2>Are you sure you want to delete?</h2>

<p><strong>Name:</strong> @Model.E_Name</p>
<p><strong>Email:</strong> @Model.E_Email</p>
<p><strong>Department:</strong> @Model.Department</p>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Emp_Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Employee" class="btn btn-secondary">Cancel</a>
</form>
