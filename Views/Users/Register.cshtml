@model Sunny_Acxiom.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-image: url('https://p1.hiclipart.com/preview/806/56/48/customer-customer-relationship-management-microsoft-dynamics-crm-computer-software-act-crm-business-information-technology-circle-png-clipart.jpg');
            
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: flex-start; /* LEFT SIDE */
            align-items: center;
            padding-left: 80px; /* Move box slightly from edge */
        }

        .register-box {
            width: 450px;
            background: rgba(255,255,255,0.88);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.4);
        }
    </style>
</head>

<body>

    <div class="register-box">
        <h2 class="text-center text-primary">User Registration</h2>

        <form asp-action="Register" method="post">
            <label><strong>Name</strong></label>
            <input asp-for="Name" class="form-control mb-3" required />

            <label><strong>Email</strong></label>
            <input asp-for="Email" class="form-control mb-3" required />

            <label><strong>Password</strong></label>
            <input asp-for="Password" type="password" class="form-control mb-3" required />

            <button class="btn btn-success w-100 mt-2">Register</button>
        </form>
    </div>

</body>
</html>
